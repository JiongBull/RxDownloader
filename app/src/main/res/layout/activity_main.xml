<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oussaki.com.rxdownloader.Main">

    <TextView
        android:textSize="21sp"
        android:textStyle="bold"
        android:background="#e3e3e3"
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Progress:"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/sync"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sync"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/progress" />

    <Button
        android:id="@+id/Async"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Async"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress" />

    <EditText
        android:id="@+id/multiline"
        android:layout_width="363dp"
        android:layout_height="251dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="345dp"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/multiline"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/multiline"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/multiline"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sync"
        app:layout_constraintVertical_bias="0.484"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
